<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <mobi.omegacentauri.giantbarometer.BigTextView
        android:id="@+id/pressure"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="0sp"
        android:textSize="50sp"
        />
        <mobi.omegacentauri.giantbarometer.BigTextView
            android:id="@+id/altitude"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0sp"
            android:textSize="50sp"
            />
        <mobi.omegacentauri.giantbarometer.BigTextView
            android:id="@+id/laps"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0sp"
            android:textSize="50sp"
            />

        <mobi.omegacentauri.giantbarometer.GraphView
            android:id="@+id/pressure_graph"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="0sp"
            android:textSize="50sp"
            />
    <mobi.omegacentauri.giantbarometer.GraphView
        android:id="@+id/alt_graph"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="0sp"
        android:textSize="50sp"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >
        <CheckBox
            android:id="@+id/background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:buttonTint="#FFFFFF"
            android:text="Work in background"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/resetGraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/clear"
            android:padding="12dp"
            android:onClick="onResetGraph" />
        <ImageButton
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/zero"
            android:padding="12dp"
            android:onClick="onZero" />
    <ImageButton
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/settings"
        android:padding="12dp"
        android:onClick="onSettingsClick" />
    </LinearLayout>
</LinearLayout>
</FrameLayout>